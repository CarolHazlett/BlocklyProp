<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/xsd/assembly-1.1.1.xsd">

    <id>dist-demo</id>
    <formats>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>webcontent</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.html</include>
                <include>*.css</include>
                <include>Blob.js</include>
                <include>FileSaver.min.js</include>
                <include>blockly_helper.js</include>
                <include>blocklyprophelp.js</include>
                <include>blocklyscribbler.js</include>
                <include>lib/*/*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/html</directory>
            <outputDirectory>/help</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>blockly</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.*</include>
                <include>*/*.*</include>
                <include>*/*/*.*</include>
                <include>*/*/*/*.*</include>
            </includes>
            <excludes>
                <exclude>*.py</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>webcontent/version/demo</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>
        <!--        <fileSet>
            <directory>propellent</directory>
            <outputDirectory>propellent/</outputDirectory>
            <includes>
                <include>*.*</include>
            </includes>
        </fileSet>-->
    </fileSets>
</assembly>